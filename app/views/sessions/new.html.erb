<h4>Login</h4>
<%= form_tag login_path do %>
  <div class="form_group">
    <%= label_tag :username, "username" %>
    <%= text_field_tag :username %>
  </div>
  <div class="form_group">
    <%= label_tag :password, "password" %>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "login", class: "btn_blue" %>
<% end %>
