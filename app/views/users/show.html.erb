<h4><%= @user.username %></h4>
<div>
  <div class="followees">
    <%= followees(@user) %>
  </div>

  <div class="followers">
    <%= followers(@user) %>
  </div>

  <%= link_to "follow #{@user.username}", user_follows_path(@user),
                                          remote: true, method: :post %>
  <h5>Shares: <%= @user.share_count %></h5>
</div>
