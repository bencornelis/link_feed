<h4>Join Us</h4>
<%= form_for @user do |f| %>
  <div>
    <%= f.label :username, "username" %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email, "email" %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password, "password" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "password confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.submit "join" %>
<% end %>
