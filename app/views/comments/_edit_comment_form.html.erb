<%= form_for comment, id: "edit_comment_#{comment.id}", remote: true do |f| %>
  <%= f.text_area :text, class: "comment_textarea", id: "edit_comment_text_#{comment.id}",
   rows: 5, cols: 40 %>

  <%= f.submit "submit edit", class: "btn_blue" %>

  <% unless top_level %>
    <%= content_tag 'a', 'hide', class: 'hide btn_yellow' %>
  <% end %>
<% end %>
