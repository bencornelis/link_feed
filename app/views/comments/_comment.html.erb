<%= comment_li(comment) do %>
  <h5><%= link_to comment.username, user_path(comment.user) %> <%= time_since(comment.created_at) %> |
    <%= link_to "reply", new_comment_comment_path(comment), remote: true %>
  </h5>
  <p class="post_text">
    <%= comment.text %>
  </p>
  <p class="new_comment">

  </p>
  <% if show_subcomments %>
    <ul class="comments">
      <%= render comment.comments, commentable: comment, show_subcomments: true %>
    </ul>
  <% end %>
<% end %>
