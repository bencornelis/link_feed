<%= form_for [commentable, Comment.new], remote: true,
  html: {id: "new_comment_on_#{commentable.class.name.downcase}_#{commentable.id}"} do |f| %>

  <%= f.text_area :text, id: "comment_text_#{commentable.class.name.downcase}_#{commentable.id}",
                    class: "comment_textarea", rows: 5, cols: 40 %>

  <%= f.submit "comment", class: "btn_blue" %>

  <% unless top_level %>
    <%= content_tag 'a', 'hide', class: 'hide btn_yellow' %>
  <% end %>
<% end %>
