<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="form_table">
    <tbody>
      <tr class="field">
        <td><%= f.label :username, "username", class: "form_label" %></td>
        <td><%= f.text_field :username, class: "form_input", autofocus: true %></td>
      </tr>

      <tr class="field">
        <td><%= f.label :password, "password", class: "form_label" %></td>
        <td><%= f.password_field :password, class: "form_input", autocomplete: "off" %></td>
      </tr>

      <% if devise_mapping.rememberable? -%>
        <tr class="field">
          <td></td>
          <td>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </td>
        </tr>
      <% end -%>

      <tr class="actions">
        <td></td>
        <td><%= f.submit "login", class: "btn_blue" %></td>
      </tr>

      <tr>
        <td></td>
        <td><%= link_to "Forgot your password?", new_password_path(resource_name) %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= devise_error_messages! %>