<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <table class="form_table">
    <tbody>
      <tr class="field">
        <td><%= f.label :email, class: "form_label" %></td>
        <td><%= f.email_field :email, class: "form_input", autofocus: true %></td>
      </tr>

      <tr class="actions">
        <td></td>
        <td><%= f.submit "Send me reset password instructions", class: "btn_blue" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<%= devise_error_messages! %>