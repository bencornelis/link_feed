<!DOCTYPE html>
<html>
<head>
  <title>HubskiClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id="<%= params[:controller].parameterize %>_controller">

<nav id="main-nav">
  <%= link_to "home", root_path %> |

  <% if user_logged_in? %>
    <%= link_to "logout", logout_path %> |
    <%= link_to "profile", user_path(current_user) %> |
  <% else %>
    <%= link_to "login", login_path %> | <%= link_to "Join Us", join_path %> |
  <% end %>

  <%= link_to "+ post", new_post_path, class: "btn" %>
</nav>

<%= yield :sub_nav %>

<div id="flash">
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>

<div id="main">
  <%= yield %>
</div>
</body>
</html>
