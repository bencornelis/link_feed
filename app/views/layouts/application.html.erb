<!DOCTYPE html>
<html>
<head>
  <title>HubskiClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% if user_logged_in? %>
  <%= link_to "Logout", logout_path %> |
  <% else %>
  <%= link_to "Login", login_path %> | <%= link_to "Join Us", join_path %> |
  <% end %>

  <%= link_to "Post +", new_post_path %>
</div>
<hr>
<div>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
</div>

<%= yield %>

</body>
</html>
