<%= form_for @post do |f| %>
  <table class="form_table">
    <tbody>
      <tr>
        <td><%= f.label :title, "title", class: "form_label" %></td>
        <td><%= f.text_field :title, class: "form_input_wide" %></td>
      </tr>

      <tr>
        <td><%= f.label :url, "url", class: "form_label" %></td>
        <td>
          <%= f.url_field :url, class: "form_input_wide" %>
          <span class="subdued">(leave blank for text only)</span>
        </td>
      </tr>

      <tr>
        <td><%= f.label :text, "text", class: "form_label" %></td>
        <td><%= f.text_area :text, class: "form_textarea tinymce", rows: 10, cols: 120 %></td>
        <%= tinymce %>
      </tr>

      <tr>
        <td><%= f.label :tag_names, "tags", class: "form_label" %></td>
        <td>
          <%= f.select :tag_names, options_for_select([]),
                       { multiple: true, include_hidden: false },
                       { class: "tag_input form_input_wide", multiple: true }%>
        </td>
      </tr>

      <tr>
        <td></td>
        <td><%= f.submit (@post.new_record? ? "submit" : "submit edit"), class: "btn_blue" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
