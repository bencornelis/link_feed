<h2>
  <%= @post.title %>
</h2>

<h5 class="post_details">
  <%= link_to @post.username, user_path(@post.user) %>
  <%= time_since(@post.created_at) %> | <%= shares(@post) %>
  <%= share_link(@post) %>
</h5>

<article class="post_text">
  <%= @post.text %>
</article>

<%= render "comments/new_comment_form", commentable: @post, top_level: true %>

<hr>

<ul class="comments">
  <%= render @post.comments, commentable: @post, show_subcomments: true %>
</ul>
