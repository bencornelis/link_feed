<h3><%= @post.title %></h3>
<div class="share_link">
  <%= share_link(@post) %>
</div>
<h5><%= link_to @post.username, user_path(@post.user) %> <%= time_since(@post.created_at) %></h5>
<div class="shares">
  <%= shares(@post) %>
</div>
<p class="post-text">
  <%= @post.text %>
</p>
<hr>
<%= render "comments/form", commentable: @post %>
<hr>
<ul class="comments">
  <%= render @post.comments, commentable: @post %>
</ul>
