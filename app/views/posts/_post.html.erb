<%= content_tag_for :li, post do %>
  <% present post do |post_presenter| %>
    <h4 class="post_title"><%= post_presenter.linked_title %></h4>
    <div class="post_details">
      <div class="main_post_details">
        <div class="poster">
          <%= post_presenter.linked_username %>
        </div>

        <div class="comments_and_tags">
          <%= post_presenter.linked_comments %> / <%= post_presenter.linked_tags %>
          <%= post_presenter.followee_shares %>
        </div>
      </div>

      <% unless is_blurb %>
        <%= render "more_info", presenter: post_presenter%>
      <% end %>
    </div>
  <% end %>
<% end %>
