<% content_for :sub_nav do %>
  <nav id="sub_nav">
    sort by:
    <%= sortable "time" %> | <%= sortable "shares" %> | <%= sortable "comments" %>
  </nav>
<% end %>

<ul class="posts">
  <%= render @posts, is_blurb: false %>
</ul>


<%= will_paginate @posts, :page_links => false %>


<%= javascript_include_tag "posts" %>
